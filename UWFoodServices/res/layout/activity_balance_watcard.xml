<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="100dp"
    android:minWidth="100dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BalanceWatcard" >

    <TextView
        android:id="@+id/meal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:background="#101010"
        android:gravity="center"
        android:minHeight="75dp"
        android:minWidth="125dp"
        android:text="@string/defaultdata"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/meal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:minHeight="75dp"
        android:minWidth="125dp"
        android:text="@string/defaultdata"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/flex_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meal_value"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minHeight="75dp"
        android:minWidth="125dp"
        android:text="@string/defaultdata"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
        android:id="@+id/total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flex_value"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minHeight="75dp"
        android:minWidth="125dp"
        android:text="@string/defaultdata"
        android:textAppearance="?android:attr/textAppearanceLarge" />        

    <TextView
        android:id="@+id/flex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/meal_text"
        android:layout_below="@+id/meal_text"
        android:layout_marginTop="25dp"
        android:background="#101010"
        android:gravity="center"
        android:minHeight="75dp"
        android:minWidth="125dp"
        android:text="@string/defaultdata"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/meal_text"
        android:layout_below="@+id/flex1"
        android:layout_marginTop="25dp"
        android:background="#101010"
        android:gravity="center"
        android:minHeight="75dp"
        android:minWidth="125dp"
        android:text="@string/defaultdata"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
