<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="100dp"
    android:minWidth="100dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BalanceWatcard" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/defaultdata"
        android:textSize="25sp" />
    
    <TextView
        android:id="@+id/meal_text"
        android:textColor="#606060"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="45dp"
        android:text="@string/defaultdata"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/meal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meal_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/defaultdata"
        android:textSize="25sp" />
    
    <TextView
        android:id="@+id/flex_text"
        android:textColor="#606060"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meal_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/defaultdata"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/flex_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flex_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/defaultdata"
        android:textSize="25sp" />
    
    <TextView
        android:id="@+id/total_text"
        android:layout_width="wrap_content"
        android:textColor="#606060"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flex_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/defaultdata"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/defaultdata"
        android:textSize="25sp" />

    

</RelativeLayout>
